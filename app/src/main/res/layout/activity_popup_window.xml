<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical">

    <!-- 定义一个用于显示头像的ImageView -->
    <ImageView
        android:id="@+id/popupimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/popupitemname"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"


        />

    <Button
        android:id="@+id/quit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/popupitemname"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/popupdescription"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/popupdescription"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@android:color/background_light"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addquantity"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/popupdescription"
        android:layout_marginRight="5dp"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/quantity"
        android:background="@android:drawable/arrow_up_float"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/popupdescription"
        android:layout_marginRight="5dp"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/minusquantity"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:textSize="10sp" />

    <Button
        android:id="@+id/minusquantity"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/popupdescription"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/showprice"

        android:background="@android:drawable/arrow_down_float" />

    <Button
        android:id="@+id/redeem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/popupdescription"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/showprice"
        android:background="@drawable/download" />

    <TextView
        android:id="@+id/showprice"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/popupdescription"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:textSize="15dp" />

</RelativeLayout>